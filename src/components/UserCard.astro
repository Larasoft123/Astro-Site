---
interface Props {
  user: {
    name: string;
    id: string;
    image: string;
    gender: string;
    status: string;
    species: string;
  };
}


const { user } = Astro.props as Props;
const { name, id, image,gender,status,species } = user;
---

<article class="p-3">
  <div class="w-full max-w-sm gap-2 sm:gap-0 border border-gray-200 rounded-lg shadow bg-gray-800 border-gray-700 flex flex-col justify-items-center sm:justify-normal sm:flex-row" >
    
    <a class="w-full sm:w-1/3 transition hover:scale-110 " href={`/personaje/${id}`}>
      <!-- transition animate slide para despues  -->
      <img src={image} transition:name={`img-${id}`} alt={name} class="w-auto max-h-56 h-full rounded justify-self-center"  />
    </a>
 
    <div class="px-3">
      <h2 class="text-xl text-balance text-wrap">{name} </h2>
      <p class="text-gray-400 text-wrap py-1">{gender}</p>
      <span class:list= {[
      "inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset",
      { "bg-green-50  text-green-700 ring-green-600/20": status === "Alive" },
      { "bg-red-50 text-red-700 ring-red-600/10": status === "Dead" },
      { "bg-gray-50 text-gray-600 ring-gray-500/10": status === "unknown"}  
      ]}   
      >
      {status} 
    </span>

    <p class:list={[
    'text-xs text-balance text-wrap py-2',
    { 'text-gray-400': species === 'Human'},
    { 'text-green-700': species === 'Alien'},
  
   
    ]} 
    >
    {species}
  </p>


  

  
 

    </div>

  </div>
</article>

